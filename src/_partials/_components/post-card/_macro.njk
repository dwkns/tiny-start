{# 
  Should this be in a seperate file?
  Probably if they are going to be reused in multiple projects. 
  But then how do we deal with styling?

  imageUrl: Image URL <string> *required
  imageAlt: Image Alt Text <string> *required
  title : Card Title <string> *required
  summary : Card summary <string> *required
  category : ( usually post.data.contentMetadata.category ) <string> 
  categorySlug: "/article/"
  type: ( usually post.data.contentMetadata.type )
  postUrl: (usually post.url)
  author: Name of the author
  authorImage: 
  authorUrl: Link to the authors Url
  publishDate: "2021-10-25T00:00:00.000Z" 
  readTime: Just a string for now 
#}

{%- macro postCard(params) -%}
<div class="flex flex-col overflow-hidden rounded-lg shadow-lg">
  <div class="flex-shrink-0">
    <img class="object-cover w-full h-48" src="{{params.imageUrl}}" alt="{{params.imageAlt}}">
  </div>
  <div class="flex flex-col justify-between flex-1 p-6 bg-white">
    <div class="flex-1">
      <a href="{{params.categorySlug}}" class="inline-block">
        <span class="inline-flex items-center text-sm font-medium text-gray-500 hover:underline">
          {{params.category}}
        </span>
      </a>
      <a href="{{params.postUrl}}" class="block mt-2">
        <p class="text-xl font-semibold text-gray-900 hover:underline">{{params.title}}</p>
        <p class="mt-3 text-base text-gray-500">{{params.summary}}</p>
      </a>
    </div>
    <div class="flex items-center mt-6">
      <div class="flex-shrink-0">
        <a href="{{params.authorUrl}}">
          <span class="sr-only">{{params.author}}</span>
          <img class="w-10 h-10 rounded-full" src="{{params.authorImage}}" alt="{{params.author}} portrait">
        </a>
      </div>

      <div class="ml-3">
        <p class="text-sm font-medium text-gray-900">
          <a href="{{params.authorUrl}}" class="hover:underline">{{params.author}}</a>
        </p>
        <div class="flex space-x-1 text-sm text-gray-500">
          <time datetime="{{params.dateTime}}">{{params.publishDate | readableDate}}</time>

          <span aria-hidden="true">&middot;</span>
          <span>{{params.readTime}}</span>
        </div>
      </div>
    </div>
  </div>
</div>
{%- endmacro -%}

